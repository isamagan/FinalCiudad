<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <div style="margin-left:40px"><h4 style="color:white" >Modificar una nueva novedad</h4></div>
            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Título" name="titulo"
                        value="{{novedad.titulo}}">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Subtítulo"
                        name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Cuerpo"
                        name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <p style="color:white">{{message}}</p>
            {{/if}}

        </div>

    </div>