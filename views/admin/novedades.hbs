<div class="container" style="margin-top:50px;">
    <div class="row">
        <p class="text-end" style="color:white">Hola {{usuarios}}! <a class="btn btn-danger"
                href="/admin/login/logout">Cerrar sesión<i class="fas fa-sing-out-alt"></i>

            </a></p>

    </div>
    <!--inicio fila 2-->
    <div class="row">
        <div class="col-7" style="margin-top:-9px;">
            <h2 style="color:white" >Listado de Novedades</h2>

        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo </a>

        </div>

    </div>

    <!--inicio fila 3-->
    <div class="row">
        <div class="col">
            <table class="">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col" class="text-end">Acciones</th>

                </thead>
             <tbody>
                {{#each novedades}}
                <tr style="background-color:gray">
                    <th scope="row" style="color:white">{{id}}</th>
                    <td style="color:white">{{titulo}}</td>
                    <td class="text-end">
                        <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                        <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
             </tbody>
            </table>

        </div>

    </div>
</div>